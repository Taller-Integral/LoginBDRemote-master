<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo4">

    <EditText
        android:ems="10"
        android:id="@+id/et_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_name"
        android:enabled="false"
        android:textSize="24sp"
        android:editable="false"
        android:inputType="none"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable" />


    <EditText
        android:ems="10"
        android:hint="Asunto"
        android:id="@+id/et_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:textColor="@color/background_material_light"
        android:textColorHint="@color/hint_foreground_material_dark" />

    <EditText
        android:ems="10"
        android:hint="TelÃ©fono Contacto"
        android:id="@+id/et_sub_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="phone"
        android:textColorHint="@color/hint_foreground_material_dark"
        android:textColor="@color/background_material_light" />
    <EditText
        android:ems="10"
        android:hint="Email Contacto"
        android:id="@+id/et_sub_email_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/hint_foreground_material_dark"
        android:textColor="@color/background_material_light" />
    <EditText
        android:ems="10"
        android:hint="Nombre Empresa"
        android:id="@+id/et_sub_nombre_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:textColorHint="@color/hint_foreground_material_dark"
        android:textColor="@color/background_material_light" />

    <EditText
        android:ems="10"
        android:hint="Mensaje"
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textPostalAddress"
        android:layout_marginBottom="60dp"
        android:textColorHint="@color/hint_foreground_material_dark"
        android:textColor="@color/background_material_light" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_height="53dp"
        android:layout_marginTop="5dip"
        android:layout_width="90dp"
        android:background="@drawable/correo"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="140dp" />

</LinearLayout>
